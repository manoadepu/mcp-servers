{
  "name": "project-assistant",
  "version": "0.1.0",
  "description": "Project Assistant MCP Server - Code Analysis and Project Management",
  "main": "build/index.js",
  "bin": {
    "project-assistant": "./build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest --no-cache --runInBand --forceExit --detectOpenHandles",
    "test:watch": "jest --watch --no-cache --runInBand --detectOpenHandles",
    "start": "node build/index.js",
    "dev": "tsc --watch",
    "clean": "rimraf build",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "mcp",
    "code-analysis",
    "project-management",
    "development-tools"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/eventemitter3": "^1.2.0",
    "@types/node-cache": "^4.1.3",
    "eventemitter3": "^5.0.1",
    "node-cache": "^5.1.2",
    "simple-git": "^3.22.0"
  }
}
