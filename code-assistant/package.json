{
  "name": "project-assistant",
  "version": "0.1.0",
  "description": "Project Assistant MCP Server - Code Analysis and Project Management",
  "main": "build/index.js",
  "bin": {
    "project-assistant": "./build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest --no-cache --runInBand --forceExit --detectOpenHandles",
    "test:watch": "jest --watch --no-cache --runInBand --detectOpenHandles",
    "start": "node build/index.js",
    "dev": "tsc --watch",
    "clean": "rimraf build",
    "prepare": "npm run build",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v",
    "docker:restart": "docker-compose restart",
    "init:db": "sqlite3 data/project-assistant.db < init-db.sql"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.5",
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "mcp",
    "code-analysis",
    "project-management",
    "development-tools"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/eventemitter3": "^1.2.0",
    "@types/node-cache": "^4.1.3",
    "@types/node-fetch": "^2.6.12",
    "better-sqlite3": "^8.7.0",
    "eventemitter3": "^5.0.1",
    "knex": "^2.5.1",
    "node-cache": "^5.1.2",
    "node-fetch": "^2.7.0",
    "simple-git": "^3.22.0"
  }
}
