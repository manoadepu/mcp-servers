{
  "name": "@mcp-servers/shared",
  "version": "1.0.0",
  "description": "Shared database and utilities for MCP servers",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "bin": {
    "migrate": "build/cli/migrate.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "clean": "rm -rf build",
    "migration:create": "node build/cli/migrate.js create",
    "migration:up": "node build/cli/migrate.js up",
    "migration:down": "node build/cli/migrate.js down",
    "migration:status": "node build/cli/migrate.js status",
    "migration:validate": "node build/cli/migrate.js validate",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "@types/sqlite3": "^3.1.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "files": [
    "build",
    "database"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "globalSetup": "<rootDir>/src/__tests__/setup.ts",
    "globalTeardown": "<rootDir>/src/__tests__/setup.ts",
    "setupFilesAfterEnv": [
      "<rootDir>/src/__tests__/setup.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/"
    ],
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/build/",
      "/__tests__/"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "json"
    ]
  }
}
